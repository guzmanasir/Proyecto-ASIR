
p NUEVOS

div(layout="row")
    md-content.md-padding(layout-xs='column', layout='row')
        md-list(layout="row" layout-wrap)
            md-list-item(ng-repeat="lista in mlc.listas track by $index")
                md-card(flex class="todas")
                    div(layout="row")
                        div(layout="column" flex=90)
                            md-card-title
                                md-card-title-text
                                    span.md-headline(flex) {{ lista.nombre }}
                            div(layout= "row")
                                img.md-card-image(flex= 50, ng-src='{{lista.info[0].thumbnail}}')
                                img.md-card-image(flex= 50, ng-src='{{lista.info[1].thumbnail}}')
                            div(layout= "row")
                                img.md-card-image(flex= 50, ng-src='{{lista.info[2].thumbnail}}')
                                img.md-card-image(flex= 50, ng-src='{{lista.info[3].thumbnail}}')

                            //md-card-actions(layout='row', layout-align='start center')
                            //    md-card-icon-actions
                            p Por: {{ lista.nombreUsuario }}
                            div(ng-repeat="tag in lista.tags")
                                span Genero: {{ tag }}

                            p NÂº Favoritos: {{ lista.numfavoritos }}
                        div(layout="column" flex=10 class="iconos")
                            i.material-icons(ng-click="nct.play(lista.info)") play_arrow
                            div(ng-if="lista.usuarioid != lista.miusuarioid")
                                div(ng-if="lista.isfavorited == false")
                                    //md-button(ng-click="nct.favorito(lista.listaid)") Favorito
                                    i.material-icons(ng-click="nct.favorito(lista.listaid)") favorite_border
                                div(ng-if="lista.isfavorited == true")
                                    //md-button(ng-click="nct.nofavorito(lista.listaid)") NO Favorito
                                    i.material-icons(ng-click="nct.nofavorito(lista.listaid)") favorite


                //md-card-content